<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="GameModeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_bottom</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:elevation">2dp</item>
    </style>

</resources>
